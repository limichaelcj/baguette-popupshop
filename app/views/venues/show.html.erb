<!-- needs major restyling, add class:"datepicker" to input -->
<div class="container" style="margin-top: 40px; color: white">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Create an event</h2>
    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
