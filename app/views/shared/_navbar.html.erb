<div class="upperdiv">
    <% if user_signed_in? %>
      <span style="margin-right:30px;">Welcome, <%= current_user.name %> </span>
      <%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
    <% else %>
      <a onclick="showUserForm()" style="cursor:pointer;">LOGIN / SIGNUP</a>
    <% end %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="userForm" class="userForm" style="display:none;">
    <label for="login" class="inp">
    <%= f.text_field :email,
                id: 'login',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
     <span class="label">Email</span>
      <span class="border"></span>
    </label>
    <label for="password" class="inp">
    <%= f.password_field :password,
                required: false,
                id: 'password',
                input_html: { autocomplete: "current-password" } %>
                  <span class="label">Password</span>
      <span class="border"></span>
    </label>
    <input type="submit" hidden>

  </div>

<% end %>

</div>

